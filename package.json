{
  "name": "starter-kit-ts",
  "version": "0.0.1",
  "description": "Starter kit for full-stack TypeScript projects",
  "private": true,
  "scripts": {
    "prebuild": "npm run cleanup",
    "build": "npm run build:server && npm run build:client",
    "postbuild": "./bin/build-info.sh || echo 'No build info'",
    "build:client": "webpack --config client/webpack/prod.config.ts",
    "build:server": "tsc -p ./server",
    "cleanup": "rimraf ./dist/*",
    "predev": "npm run cleanup",
    "dev": "concurrently -k -n \"client,build,serve\" \"npm run dev:client\" \"npm run dev:build\" \"npm run dev:serve\"",
    "dev:build": "npm run build:server -- --sourceMap --watch",
    "dev:client": "webpack-dev-server --config client/webpack/dev.config.ts",
    "predev:serve": "wait-on -l file:dist/server.js",
    "dev:serve": "cross-env PORT=3100 nodemon --inspect dist/server.js --watch dist",
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"npm run serve\" \"npm run e2e:safe\"",
    "e2e:dev": "concurrently -k -s first -n \"dev,e2e\" \"npm run dev\" \"npm run e2e:safe\"",
    "e2e:local": "cypress open",
    "e2e:run": "cypress run",
    "e2e:safe": "wait-on -l http-get://localhost:3000 && npm run e2e:run",
    "lint": "eslint . --ext=.js,.jsx,.ts,.tsx",
    "preserve": "npm run build",
    "serve": "npm start",
    "ship": "npm run lint && npm run test && npm run e2e:dev && npm run e2e",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/starter-kit-ts.git"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "contributors": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/starter-kit-ts/issues"
  },
  "homepage": "https://github.com/textbook/starter-kit-ts#readme",
  "devDependencies": {
    "@codeyourfuture/eslint-config-standard": "^2.0.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@types/express": "^4.17.7",
    "@types/helmet": "0.0.48",
    "@types/html-webpack-plugin": "^3.2.3",
    "@types/jest": "^26.0.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.2",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/supertest": "^2.0.10",
    "@types/webpack": "^4.41.21",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "axios": "^0.20.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.2.2",
    "cypress": "^5.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "file-loader": "^6.1.0",
    "html-webpack-plugin": "^4.3.0",
    "html-webpack-tags-plugin": "^2.0.17",
    "jest": "^25.5.4",
    "jest-circus": "^26.4.2",
    "nodemon": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7",
    "wait-on": "^5.2.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "morgan": "^1.10.0"
  },
  "engines": {
    "node": "^10 || ^12 || ^14"
  }
}
