{
  "name": "starter-kit-ts",
  "version": "0.0.1",
  "description": "Starter kit for full-stack TypeScript projects",
  "private": true,
  "scripts": {
    "prebuild": "npm run cleanup",
    "build": "npm run build:server && npm run build:client",
    "postbuild": "./bin/build-info.sh || echo 'No build info'",
    "build:client": "webpack --config client/webpack/prod.config.ts",
    "build:server": "tsc -p ./server",
    "cleanup": "rimraf ./dist/*",
    "predev": "npm run cleanup",
    "dev": "concurrently -k -n \"client,server\" \"npm run dev:client\" \"npm run dev:serve\"",
    "dev:client": "webpack serve --config client/webpack/dev.config.ts",
    "dev:serve": "cross-env PORT=3100 nodemon --watch server --ext ts --exec 'node --inspect -r ts-node/register server/server.ts'",
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"npm run serve\" \"npm run e2e:safe\"",
    "e2e:dev": "concurrently -k -s first -n \"dev,e2e\" \"npm run dev\" \"npm run e2e:safe\"",
    "e2e:local": "cypress open",
    "e2e:run": "cypress run",
    "e2e:safe": "wait-on -l -i 1000 -t 30000 http-get://localhost:3000 && npm run e2e:run",
    "lint": "eslint . --ext=.js,.jsx,.ts,.tsx",
    "preserve": "npm run build",
    "serve": "npm start",
    "ship": "npm run lint && npm run test && npm run e2e:dev && npm run e2e",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/starter-kit-ts.git"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "contributors": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/starter-kit-ts/issues"
  },
  "homepage": "https://github.com/textbook/starter-kit-ts#readme",
  "devDependencies": {
    "@codeyourfuture/eslint-config-standard": "^2.0.3",
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/express": "^4.17.11",
    "@types/html-webpack-plugin": "^3.2.4",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.30",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/supertest": "^2.0.10",
    "@types/webpack": "^4.41.26",
    "@types/webpack-dev-server": "^3.11.1",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "axios": "^0.21.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.2",
    "cypress": "^6.5.0",
    "eslint": "^7.20.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.1.0",
    "html-webpack-tags-plugin": "^3.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "nodemon": "^2.0.7",
    "prop-types": "^15.7.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "wait-on": "^5.2.1",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0"
  },
  "engines": {
    "node": "^10 || ^12 || ^14"
  }
}
